# AskData Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Connections
# ============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=askdata
POSTGRES_USER=askdata_user
POSTGRES_PASSWORD=your_secure_password

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=askdata
MYSQL_USER=askdata_user
MYSQL_PASSWORD=your_secure_password

# Snowflake
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema

# BigQuery
BIGQUERY_PROJECT_ID=your_project_id
BIGQUERY_DATASET=your_dataset
BIGQUERY_CREDENTIALS_PATH=./data/credentials/bigquery.json

# Redshift
REDSHIFT_HOST=your_cluster_endpoint
REDSHIFT_PORT=5439
REDSHIFT_DATABASE=your_database
REDSHIFT_USER=your_username
REDSHIFT_PASSWORD=your_password

# ============================================================================
# LLM Configuration
# ============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local Models
LOCAL_MODEL_PATH=./data/models/local_llm
LOCAL_MODEL_TYPE=llama2

# ============================================================================
# Vector Store Configuration
# ============================================================================

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8002
CHROMA_PERSIST_DIR=./data/chromadb

# OpenSearch (Optional)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

